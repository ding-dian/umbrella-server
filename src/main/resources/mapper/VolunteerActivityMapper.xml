<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.volunteer.mapper.VolunteerActivityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.volunteer.entity.VolunteerActivity">
        <id column="id" property="id" />
        <result column="activity_name" property="activityName" />
        <result column="activity_img" property="activityImg" />
        <result column="activity_address" property="activityAddress" />
        <result column="number_of_need" property="numberOfNeed" />
        <result column="number_of_attendees" property="numberOfAttendees" />
        <result column="description" property="description" />
        <result column="reward_points" property="rewardPoints" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="status" property="status" />
        <result column="deleted" property="deleted" />
        <result column="create_at" property="createAt" />
        <result column="create_by" property="createBy" />
        <result column="update_at" property="updateAt" />
        <result column="update_by" property="updateBy" />
        <result column="is_audited" property="isAudited" />
        <result column="predict_duration" property="predictDuration" />
        <result column="actual_duration" property="actualDuration" />

    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, activity_name, activity_img, activity_address, number_of_need, number_of_attendees, description, reward_points, start_time, end_time, status, deleted, create_at, create_by, update_at, update_by
    </sql>

    <!-- 批量更新 -->
    <update id="updateStatus">
        <foreach collection="list" item="item" separator=";">
            update volunteer_activity
            <if test="item.status != null">
                <set>
                    status = #{item.status}
                </set>
                where id = #{item.id}
            </if>
        </foreach>
    </update>
    <select id="selectByName" resultType="com.volunteer.entity.VolunteerActivity">
        select * from volunteer_activity where activity_name = #{name}
    </select>

    <!-- 嵌套查询，查询一个用户的多个活动记录 -->
    <select id="selectUserActivityList" parameterType="int" resultType="com.volunteer.entity.VolunteerActivity">
        SELECT * FROM volunteer_activity
        WHERE id
        IN (SELECT volunteer_activity_id as id FROM sign_up_record WHERE volunteer_id = #{volunteerID} )
        LIMIT #{skip},#{pageSize}
    </select>
</mapper>
