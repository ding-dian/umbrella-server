<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.volunteer.mapper.VolunteerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.volunteer.entity.VolunteerActivity">
        <result column="activity_number" property="activityNumber" />
        <result column="activity_totaltime" property="activityTotaltime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, phone_number, email_address, student_id, password, institude, grade, major, points, deleted, create_at, create_by, update_at, update_by
    </sql>
    
    <select id="selectTest" parameterType="int" resultType="com.volunteer.entity.Volunteer">
        select * from volunteer where id = #{id}
    </select>

    <select id="selectByOpenid" resultType="com.volunteer.entity.Volunteer">
        select * from volunteer where openid = #{openid}
    </select>
    <select id="selectByName" resultType="com.volunteer.entity.Volunteer">
        select * from volunteer where name = #{name}
    </select>

    <update id="updateUserPhoneNumber" parameterType="com.volunteer.entity.Volunteer">
        update volunteer set phone_number=#{borrowDate}   where openid=#{openid};
    </update>

</mapper>
